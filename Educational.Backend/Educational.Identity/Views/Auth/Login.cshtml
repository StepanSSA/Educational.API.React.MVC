@model LoginViewModel
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

<form asp-controller="Auth" asp-action="Login" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <div style="max-width: 50%; margin: auto">
        <h2>Авторизация</h2>
        <div class="mb-3">
            <label asp-for="Username" for="formGroupExampleInput" class="form-label">Почта</label>
            <input asp-for="Username" type="email" class="form-control" id="formGroupExampleInput">
            <span asp-validation-for="Username"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password" for="formGroupExampleInput" class="form-label">Пароль</label>
            <input asp-for="Password" type="password" class="form-control" id="formGroupExampleInput">
            <span asp-validation-for="Password"></span>
        </div>
        <div >
            <button class="btn btn-primary" type="submit">Войти</button>
        </div>
        <a type="button" asp-controller="Auth" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">Регистрация</a>
    </div>
</form>